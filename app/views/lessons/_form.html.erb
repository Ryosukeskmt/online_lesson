<% if flash[:error_messages] %> 
  <div class="alert alert-danger">
    <ul>
      <% flash[:error_messages].each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: lesson do |f| %>
  <div class="form-group">
    <%= f.label :grade, '学年'%>
    <%= f.text_field :grade, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :subject, '教科'%>
    <%= f.text_field :subject, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :title, 'タイトル'%>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :movie, '動画をアップロード'%><br>
    <%= f.file_field :movie, class: "movie" %>
  </div>
  <div class="form-group">
    <%= f.label :teacher_name, '名前'%>
    <%= f.text_field :teacher_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :explanation, 'レッスンの説明'%>
    <%= f.text_area :explanation, size: "20x5", class: 'form-control' %>
  </div>
  <%= f.submit '保存', class: 'btn btn-primary' %>
<% end %>
