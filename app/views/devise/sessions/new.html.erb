<div class="login col-md-6 mx-auto col-md-offset-3">
  <h1 class="h3 text-center">ログイン</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :"メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード" %><br />
      <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :"パスワードを保存" %>
      </div>
    <% end %>

    <div class="actions text-center">
      <%= f.submit "ログイン", class:"w-50 btn btn-primary"%>
    </div>
  <% end %>

  <div class="link-margin text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>