<div class="login col-md-6 mx-auto col-md-offset-3">
  <h1 class="h3 text-center">パスワード変更</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "新しいパスワード" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, class: 'form-control', autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード（確認）" %><br />
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
    </div>

    <div class="actions text-center link-margin">
      <%= f.submit "送信", class:"w-50 btn btn-primary" %>
    </div>
  <% end %>
  <div class="link-margin text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
