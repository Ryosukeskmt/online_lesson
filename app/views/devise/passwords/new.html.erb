<div class="login col-md-6 mx-auto col-md-offset-3">
  <h1 class="h3 text-center">パスワード再設定</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "email" %>
    </div>

    <div class="actions text-center link-margin">
      <%= f.submit "パスワード再設定用のリンクを送信", class:"w-75 btn btn-primary" %>
    </div>
  <% end %>

  <div class="link-margin text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>